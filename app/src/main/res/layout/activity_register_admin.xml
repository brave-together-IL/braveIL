<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background2"
    tools:context=".admin.Register_admin">

    <include
        android:id="@+id/thetoolbar"
        layout="@layout/toolbar" />

    <ImageView
        android:id="@+id/image_view2"
        android:layout_width="92dp"
        android:layout_height="137dp"
        android:layout_marginTop="28dp"
        android:rotationX="1"
        android:src="@drawable/userinconlogin"
        app:layout_constraintBottom_toBottomOf="@+id/user_name_input"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.246" />

    <EditText
        android:id="@+id/user_name_input"
        android:layout_width="307dp"
        android:layout_height="58dp"
        android:layout_marginStart="52dp"
        android:layout_marginTop="184dp"
        android:background="@drawable/shape_fields"
        android:drawableEnd="@drawable/user_icon"
        android:drawablePadding="5dp"
        android:ems="10"
        android:hint="@string/username"
        android:inputType="textPersonName"
        android:minHeight="48dp"
        android:padding="15dp"
        android:textColor="@color/white"
        android:textColorHint="@color/white"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/user_birthday"
        android:layout_width="307dp"
        android:layout_height="58dp"
        android:layout_marginStart="52dp"
        android:layout_marginTop="252dp"
        android:background="@drawable/shape_fields"
        android:drawableEnd="@drawable/birthday_icon"
        android:drawablePadding="5dp"
        android:ems="10"
        android:hint="@string/bdate"
        android:inputType="textPersonName"
        android:minHeight="48dp"
        android:padding="15dp"
        android:textColor="@color/white"
        android:textColorHint="@color/white"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/user_id_input"
        android:layout_width="307dp"
        android:layout_height="58dp"
        android:layout_marginStart="52dp"
        android:layout_marginTop="324dp"
        android:background="@drawable/shape_fields"
        android:drawableEnd="@drawable/id_icon"
        android:drawablePadding="5dp"
        android:ems="10"
        android:hint="@string/idlogin"
        android:inputType="textPersonName"
        android:minHeight="48dp"
        android:padding="15dp"
        android:textColor="@color/white"
        android:textColorHint="@color/white"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/user_phone"
        android:layout_width="307dp"
        android:layout_height="58dp"
        android:layout_marginStart="52dp"
        android:layout_marginTop="396dp"
        android:background="@drawable/shape_fields"
        android:drawableEnd="@drawable/smartphone_icon"
        android:drawablePadding="5dp"
        android:ems="10"
        android:hint="@string/prompt_password"
        android:inputType="textPersonName"
        android:minHeight="48dp"
        android:padding="15dp"
        android:textColor="@color/white"
        android:textColorHint="@color/white"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/send_detail"
        android:layout_width="307dp"
        android:layout_height="58dp"
        android:layout_marginTop="86dp"
        android:layout_marginBottom="142dp"
        android:background="@drawable/shape_buttons"
        android:text="@string/add_survivor"
        android:textColor="@color/white"
        android:textSize="17sp"
        app:backgroundTint="#207CAE"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.586"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/user_phone"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/button5"
        android:layout_width="200dp"
        android:layout_height="55dp"
        android:layout_marginBottom="100dp"
        android:background="@drawable/shape_buttons"
        android:onClick="back_homepage"
        android:text="@string/back_to_menu"
        android:textColor="#FFF"
        android:textSize="16sp"
        app:backgroundTint="#3F51B5"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.606"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>